{
  "name": "@guless/guless",
  "version": "6.0.1",
  "scripts": {
    "keygen": "source scripts/generate-self-signed-cert.sh",
    "clean": "rm -rf dist && rm -rf coverage",
    "start": "webpack-dev-server --config=scripts/createApplicationWebpackConfiguration.js --mode=development",
    "build": "npm run clean && npm run build:esm && npm run build:es5 && npm run build:pkg",
    "build:es5": "tsc -p src/tsconfig.json --target es5 --declaration --outDir dist/es5/",
    "build:esm": "tsc -p src/tsconfig.json --declaration --outDir dist/esm/",
    "build:pkg": "cp package.json dist/package.json",
    "test": "jest",
    "deploy": "npm version patch && npm run build && npm publish dist/ --access public && git push"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "autoprefixer": "^9.7.6",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.4.2",
    "node-sass": "^4.14.1",
    "node-sass-once-importer": "^5.3.2",
    "postcss-loader": "^3.0.0",
    "raw-loader": "^4.0.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.4.0",
    "ts-loader": "^7.0.3",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  }
}
