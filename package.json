{
    "name": "@guless/guless",
    "version": "6.0.6",
    "description": "Web 前端标准扩展库(Standard extensions library for web developers)",
    "homepage": "https://developers.guless.com/",
    "author": "Samlv9<samlv9@live.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/guless/guless.git"
    },
    "bugs": {
        "url": "https://github.com/guless/guless/issues"
    },
    "scripts": {
        "keygen": "source scripts/generate-self-signed-cert.sh",
        "clean": "rm -rf dist",
        "start": "webpack-dev-server --config=scripts/createApplicationWebpackConfiguration.js --mode=development",
        "build": "npm run clean && npm run build:src && npm run build:es5 && npm run build:www",
        "build:es5": "tsc -p src/tsconfig.json --target es5 --declaration --outDir dist/es5/",
        "build:src": "tsc -p src/tsconfig.json --declaration --outDir dist/esm/",
        "build:www": "webpack-cli --config=scripts/createApplicationWebpackConfiguration.js --mode=production --devtool=false",
        "prenpm": "cp package.json dist/package.json && cp .npmignore dist/.npmignore",
        "deploy": "npm version patch && npm run build && npm run prenpm && npm publish dist/ --access public"
    },
    "devDependencies": {
        "autoprefixer": "^9.7.6",
        "copy-webpack-plugin": "^6.0.2",
        "css-loader": "^3.5.3",
        "cssnano": "^4.1.10",
        "html-webpack-plugin": "^4.3.0",
        "node-sass": "^4.14.1",
        "postcss-loader": "^3.0.0",
        "raw-loader": "^4.0.1",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.1",
        "ts-loader": "^7.0.3",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^4.2.2"
    }
}
